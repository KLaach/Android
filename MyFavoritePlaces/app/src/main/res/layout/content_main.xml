<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myfavoriteplaces.myfavoriteplaces.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:id="@+id/SavePlaces"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/save_places_icon"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:id="@+id/ListPlaces"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/show_saved_places_icon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:id="@+id/About"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/about_icon"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:id="@+id/Exit"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/turn_off_icon"/>

    </LinearLayout>

</LinearLayout>
